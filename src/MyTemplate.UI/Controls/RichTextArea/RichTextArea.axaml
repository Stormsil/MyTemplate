<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shadui="clr-namespace:MyTemplate.UI">

    <Design.PreviewWith>
        <Border Width="400" Height="300" Padding="20">
            <shadui:RichTextArea />
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type shadui:RichTextArea}" TargetType="shadui:RichTextArea">
        <Setter Property="FontFamily" Value="Consolas,Courier New,monospace" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{DynamicResource MdCornerRadius}" />
        <Setter Property="ItemsSource" Value="{Binding Logs, RelativeSource={RelativeSource Self}}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding CornerRadius}">
                    <ScrollViewer
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsPresenter Margin="{TemplateBinding Padding}" />
                    </ScrollViewer>
                </Border>
            </ControlTemplate>
        </Setter>
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel />
            </ItemsPanelTemplate>
        </Setter>
        <Setter Property="ItemTemplate">
            <DataTemplate x:DataType="shadui:LogEntry">
                <SelectableTextBlock Text="{Binding Text}" TextWrapping="Wrap">
                    <SelectableTextBlock.Styles>
                        <Style Selector="SelectableTextBlock[Tag=Default]">
                            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}" />
                        </Style>
                        <Style Selector="SelectableTextBlock[Tag=Primary]">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}" />
                        </Style>
                        <Style Selector="SelectableTextBlock[Tag=Secondary]">
                            <Setter Property="Foreground" Value="{DynamicResource SecondaryColor}" />
                        </Style>
                        <Style Selector="SelectableTextBlock[Tag=Success]">
                            <Setter Property="Foreground" Value="{DynamicResource SuccessColor}" />
                        </Style>
                        <Style Selector="SelectableTextBlock[Tag=Warning]">
                            <Setter Property="Foreground" Value="{DynamicResource WarningColor}" />
                        </Style>
                        <Style Selector="SelectableTextBlock[Tag=Error]">
                            <Setter Property="Foreground" Value="{DynamicResource ErrorColor}" />
                        </Style>
                        <Style Selector="SelectableTextBlock[Tag=Info]">
                            <Setter Property="Foreground" Value="{DynamicResource InfoColor}" />
                        </Style>
                        <Style Selector="SelectableTextBlock[Tag=Muted]">
                            <Setter Property="Foreground" Value="{DynamicResource MutedColor}" />
                        </Style>
                    </SelectableTextBlock.Styles>
                    <SelectableTextBlock.Tag>
                        <Binding Path="Level" />
                    </SelectableTextBlock.Tag>
                </SelectableTextBlock>
            </DataTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
